<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true">
            <ImageView
                android:id="@+id/tv11"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@mipmap/left_arrow_foreground"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ProgressBar
                android:id="@+id/indeterminateBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/tv11qw"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/right_arrow_foreground"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@color/purple_500"
                android:layout_gravity="center"
                android:id="@+id/camera"
                >
                <ImageView
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/camera_foreground"
                    />
                <TextView
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:layout_weight="4"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:text="@string/camera" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@color/purple_500"
                android:layout_gravity="center"
                android:id="@+id/album"
                >
                <ImageView
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/album_foreground"
                    />
                <TextView
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:layout_weight="4"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:text="@string/album" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@color/purple_500"
                android:layout_gravity="center"
                android:id="@+id/collage"
                >
                <ImageView
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/collage_foreground"
                    />
                <TextView
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:layout_weight="4"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:text="@string/collage" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@color/purple_500"
                android:layout_gravity="center"
                android:id="@+id/network"
                >
                <ImageView
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/network_foreground"
                    />
                <TextView
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:layout_weight="4"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:text="@string/network" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>